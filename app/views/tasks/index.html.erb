<h1>All Tasks</h1>

<ol>
  <% @tasks.each do |task| %>
  <li>
    <%= link_to task.description, task_path(task) %>
    <%= link_to 'Edit', edit_task_path(task) %>
    <%= link_to 'Delete', task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ol>

<%= link_to 'Add new task', new_task_path %>
